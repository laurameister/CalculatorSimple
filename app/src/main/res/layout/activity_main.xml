<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#151514"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/show_prev"
            android:textColor="#12ffff"
            android:hint="0"
            android:textSize="40dp"
            android:gravity="right|center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            tools:context=".MainActivity">

        <TextView
            android:id="@+id/show_operator"
            android:textColor="#12ffff"
            android:textSize="50sp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

            <TextView
                android:id="@+id/text_edit"
                android:textColor="#12ffff"
                android:hint="0"
                android:textSize="40sp"
                android:gravity="right|center"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"/>

            <TextView
                android:onClick="onClickBackspace"
                android:textColor="#474cff"
                android:text="C"
                android:textSize="40sp"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        tools:context=".MainActivity">

        <TextView
            android:onClick="onClickOne"
            android:textColor="#474cff"
            android:text="1"
            android:textSize="50sp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:onClick="onClickTwo"
            android:textColor="#474cff"
            android:text="2"
            android:textSize="50sp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <TextView
            android:onClick="onClickThree"
            android:textColor="#474cff"
            android:text="3"
            android:textSize="50sp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <TextView
            android:onClick="onClickAdd"
            android:textColor="#474cff"
            android:text="+"
            android:textSize="50sp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />


    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        tools:context=".MainActivity">

        <TextView
            android:onClick="onClickFour"
            android:textColor="#474cff"
            android:text="4"
            android:textSize="50sp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:onClick="onClickFive"
            android:textColor="#474cff"
            android:text="5"
            android:textSize="50sp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <TextView
            android:onClick="onClickSix"
            android:textColor="#474cff"
            android:text="6"
            android:textSize="50sp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <TextView
            android:onClick="onClickSubtract"
            android:textColor="#474cff"
            android:text="-"
            android:textSize="50sp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />


    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        tools:context=".MainActivity">

        <TextView
            android:onClick="onClickSeven"
            android:textColor="#474cff"
            android:text="7"
            android:textSize="50sp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:onClick="onClickEight"
            android:textColor="#474cff"
            android:text="8"
            android:textSize="50sp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <TextView
            android:onClick="onClickNine"
            android:textColor="#474cff"
            android:text="9"
            android:textSize="50sp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <TextView
            android:onClick="onClickDivide"
            android:textColor="#474cff"
            android:text="/"
            android:textSize="50sp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />


    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        tools:context=".MainActivity">

        <TextView
            android:onClick="onClickDot"
            android:textColor="#474cff"
            android:text="."
            android:textSize="50sp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:onClick="onClickZero"
            android:textColor="#474cff"
            android:text="0"
            android:textSize="50sp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <TextView
            android:onClick="onClickEqual"
            android:textColor="#474cff"
            android:text="="
            android:textSize="50sp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <TextView
            android:onClick="onClickMultiply"
            android:textColor="#474cff"
            android:text="*"
            android:textSize="50sp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />


    </LinearLayout>





</LinearLayout>

